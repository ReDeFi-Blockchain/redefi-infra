{
  "name": "redefi_deploy_test",
  "version": "0.0.1",
  "main": "index.js",
  "private": "true",
  "author": "ReDeFi",
  "license": "Apache-2.0",
  "scripts": {
    "compile": "npx hardhat compile",
    "polkadot-types-fetch-metadata": "yarn tsx scripts/fetchMetadata.ts",
    "polkadot-types-from-defs": "tsx ./node_modules/.bin/polkadot-types-from-defs --endpoint ./types/metadata.json --input ./types/ --package ./",
    "polkadot-types-from-chain": "tsx ./node_modules/.bin/polkadot-types-from-chain --endpoint ./types/metadata.json --output ./types/ --package ./",
    "polkadot-types": "echo \"export default {}\" > ./types/lookup.ts && yarn polkadot-types-fetch-metadata && yarn polkadot-types-from-defs && yarn polkadot-types-from-defs && yarn polkadot-types-from-chain",
    "lint": "eslint . --fix",
    "codestyle": "prettier . --write",
    "test:serial": "npx hardhat test --grep \"#serial\"",
    "test:regular": "npx hardhat test --grep '^(?!.*#(serial|parallel)).*$' --parallel",
    "test:stability": "npx hardhat test --grep \"#stability\"",
    "test:smoke": "npx hardhat test --grep \"#smoke\"",
    "test:setup": "hardhat run ./global-setup.ts",
    "test:hh": "npx hardhat test --no-compile",
    "run:hh": "npx hardhat run --no-compile"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.6",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@openzeppelin/contracts": "^5.0.2",
    "@polkadot/api": "^12.0.1",
    "@polkadot/typegen": "10",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "chai": "4",
    "dotenv": "^16.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mocha": "^10.4.3",
    "eslint": "8.57.0",
    "ethers": "^6.12.0",
    "hardhat": "^2.22.3",
    "mocha": "^10.4.0",
    "prettier-plugin-solidity": "^1.3.1",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.16.2",
    "typechain": "^8.3.2",
    "typescript": "^5.4.5",
    "yarn": "^1.22.22"
  }
}
